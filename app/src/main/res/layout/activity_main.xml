<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Calculadora em Kotlin"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="bottom">
            <TextView
                android:id="@+id/textoperation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:textSize="28sp"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textAlignment="viewEnd">
            </TextView>
        <TextView
            android:id="@+id/textresult"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textAlignment="viewEnd">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
          <Button
              android:layout_width="205dp"
              android:layout_height="wrap_content"
              style="@style/buttomoperators"
              android:text="C"
              android:id="@+id/buttomclear">
          </Button>
        <Button
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="="
            android:id="@+id/buttomresult">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="7"
            android:id="@+id/buttom7">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="8"
            android:id="@+id/buttom8">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="9"
            android:id="@+id/buttom9">
        </Button>
        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="+"
            android:id="@+id/buttomsum">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="4"
            android:id="@+id/buttom4">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="5"
            android:id="@+id/buttom5">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="6"
            android:id="@+id/buttom6">
        </Button>
        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="-"
            android:id="@+id/buttomminus">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="1"
            android:id="@+id/buttom1">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="2"
            android:id="@+id/buttom2">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="3"
            android:id="@+id/buttom3">
        </Button>
        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="x"
            android:id="@+id/buttommulti">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="."
            android:id="@+id/buttomvirgula">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomnum"
            android:text="0"
            android:id="@+id/buttom0">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="_"
            android:id="@+id/buttombackspace">
        </Button>
        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            style="@style/buttomoperators"
            android:text="/"
            android:id="@+id/buttomdivt">
        </Button>
    </LinearLayout>

</LinearLayout>